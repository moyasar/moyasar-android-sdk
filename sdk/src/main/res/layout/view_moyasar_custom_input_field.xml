<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/moyasar_font_size_l"
            android:textColor="@color/m_dark"
            android:fontFamily="@font/aeonik_regular"
            tools:text="Name on Card" />

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:fontFamily="@font/aeonik_regular"
            android:textSize="@dimen/moyasar_font_size_m"
            android:visibility="gone"
            tools:text="REQUIRED" />
    </LinearLayout>

    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/moyasar_spacing_small"
        android:textColor="@color/m_dark"
        android:textColorHint="@color/m_grey"
        android:fontFamily="@font/aeonik_regular"
        android:background="@drawable/bg_moyasar_edittext_background"
        android:layoutDirection="ltr"
        android:maxLines="1"
        android:padding="@dimen/moyasar_views_margin_s"
        android:textSize="@dimen/moyasar_font_size_l"
        tools:hint="Place holder text"
        tools:ignore="TextFields" />
</LinearLayout>
